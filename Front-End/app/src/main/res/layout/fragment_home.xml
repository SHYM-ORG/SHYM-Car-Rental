<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:background="#333333"
>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Hello!"
        android:textColor="@color/white"

        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Wanna find a car for rental?"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif-black"
        android:lineHeight="32sp"
        android:text="You are in the right  place"
        android:textColor="#EC0606"


        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="299dp"
        android:layout_height="158dp"
        android:src="@drawable/rental"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />





        <LinearLayout
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/rep"
            tools:layout_editor_absoluteX="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="#E3E3E3"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="560dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"

                >

                <View
                    android:id="@+id/rectangle_2"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/rectangle_2">

                </View>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="For Client"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <View
                    android:id="@+id/rectangle_9"
                    android:layout_width="wrap_content"
                    android:layout_height="145dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    android:layout_centerInParent="true"
                    android:background="#333333" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginEnd="59dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="Find your favorite car:"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rectangle_9"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="45dp"
                    android:gravity="center"
                    android:text="you can find cars for rent of any model and type (wedding cars, family car...). you can see all the details about cars, like price, stat, description...
"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/small"
                    android:layout_width="65dp"
                    android:layout_height="86dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp">

                    <View
                        android:id="@+id/rectangle_10"
                        android:layout_width="79dp"
                        android:layout_height="48dp"

                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="-335dp"
                        android:background="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_alignStart="@+id/textView7"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="20dp"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="30dp" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                >

                <View
                    android:id="@+id/rectangle_92"
                    android:layout_width="413dp"
                    android:layout_height="210dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#333333" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="270dp"
                    android:layout_height="51dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:text="Find thd nearest  car  rental agency:"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="
  you can save time and effforts of searching for agencies, our application can give you all the near ones with their localization."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/small2"
                    android:layout_width="62dp"
                    android:layout_height="46dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp">

                    <View
                        android:id="@+id/rectangle_102"
                        android:layout_width="79dp"
                        android:layout_height="48dp"

                        android:layout_centerInParent="true"
                        android:layout_marginEnd="-335dp"
                        android:background="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView72"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:text="2"
                        android:textColor="#333333"
                        android:textSize="20dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"

                >

                <View
                    android:id="@+id/rectangle_22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_2">

                </View>

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="For car rental  companies"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="225dp">

                <View
                    android:id="@+id/rectangle_93"
                    android:layout_width="match_parent"
                    android:layout_height="232dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="17dp"
                    android:background="#333333" />

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView63"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="71dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="center"
                    android:text="Share your available cars for rent     and  gain clients"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Create offers to rent cars and publish them, nearby client will be able to see all your offers and reach your agency throw our application."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/small3"
                    android:layout_width="59dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp">

                    <View
                        android:id="@+id/rectangle_103"
                        android:layout_width="59dp"
                        android:layout_height="match_parent"

                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="-335dp"
                        android:background="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView73"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="25dp"
                        android:text="3"
                        android:textColor="#333333"
                        android:textSize="30dp" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>